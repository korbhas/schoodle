{
  "name": "schoodle-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Electron desktop platform for SchoolHood (backend + frontend)",
  "scripts": {
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:electron": "npm --prefix frontend run electron:dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start:backend": "npm --prefix backend start",
    "lint:backend": "npm --prefix backend run lint",
    "lint:frontend": "npm --prefix frontend run lint"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

